{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "vscode-languageserver/*": ["node_modules/vscode-languageserver/*"],
      "vscode-languageserver-textdocument": ["node_modules/vscode-languageserver-textdocument"],
      "vscode-languageserver-textdocument/*": ["node_modules/vscode-languageserver-textdocument/*"]
    },
    "outDir": "out",
    "rootDir": "../../server/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["../../server/src/**/*"],
  "exclude": ["node_modules", "out"]
}


