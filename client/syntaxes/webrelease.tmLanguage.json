{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "WebRelease Template",
  "scopeName": "text.html.webrelease",
  "patterns": [
    {
      "include": "#wr-comments"
    },
    {
      "include": "#wr-tags"
    },
    {
      "include": "#wr-expressions"
    },
    {
      "include": "text.html.basic"
    }
  ],
  "repository": {
    "wr-comments": {
      "patterns": [
        {
          "name": "comment.block.webrelease",
          "begin": "<wr-comment>",
          "end": "</wr-comment>",
          "contentName": "comment.block.webrelease"
        }
      ]
    },
    "wr-expressions": {
      "patterns": [
        {
          "name": "meta.expression.webrelease",
          "begin": "%(?!%)",
          "end": "%",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.expression.begin.webrelease"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.expression.end.webrelease"
            }
          },
          "contentName": "meta.embedded.expression.webrelease",
          "patterns": [
            {
              "include": "#expression-contents"
            }
          ]
        }
      ]
    },
    "expression-contents": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.webrelease",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.webrelease",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.webrelease",
          "match": "\\+|-|\\*|/"
        },
        {
          "name": "support.function.webrelease",
          "match": "\\b(pageTitle|currentTime|formatDate|isNull|isNotNull|isNumber|number|string|length|substring|indexOf|contains|startsWith|endsWith|toUpperCase|toLowerCase|trim|replace|split|join|round|floor|ceil|abs|min|max|divide|setScale|selectedValue|selectedName|selected|unsplit|generatePrice|generateBenefit|generateBakuage)\\b"
        },
        {
          "name": "string.quoted.double.webrelease",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.webrelease"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.webrelease"
            }
          },
          "patterns": [
            {
              "name": "constant.character.escape.webrelease",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "constant.numeric.webrelease",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "punctuation.accessor.webrelease",
          "match": "\\."
        },
        {
          "name": "punctuation.bracket.webrelease",
          "match": "[\\[\\]()]"
        },
        {
          "name": "punctuation.separator.webrelease",
          "match": ","
        },
        {
          "name": "variable.other.webrelease",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "wr-tags": {
      "patterns": [
        {
          "name": "meta.tag.webrelease",
          "begin": "(<)(wr-(?:if|then|else|switch|case|default|for|break|variable|append|clear|return|error|conditional|cond|comment))\\b",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.webrelease"
            },
            "2": {
              "name": "entity.name.tag.webrelease"
            }
          },
          "end": "/?>",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.tag.end.webrelease"
            }
          },
          "patterns": [
            {
              "include": "#wr-tag-attributes"
            }
          ]
        },
        {
          "name": "meta.tag.webrelease.close",
          "match": "(</)(wr-(?:if|then|else|switch|case|default|for|break|variable|append|clear|return|error|conditional|cond|comment))(>)",
          "captures": {
            "1": {
              "name": "punctuation.definition.tag.begin.webrelease"
            },
            "2": {
              "name": "entity.name.tag.webrelease"
            },
            "3": {
              "name": "punctuation.definition.tag.end.webrelease"
            }
          }
        }
      ]
    },
    "wr-tag-attributes": {
      "patterns": [
        {
          "name": "entity.other.attribute-name.webrelease",
          "match": "\\b(condition|list|string|times|variable|count|index|value|name|message)\\b"
        },
        {
          "begin": "(=)\\s*(')",
          "beginCaptures": {
            "1": {
              "name": "punctuation.separator.key-value.webrelease"
            },
            "2": {
              "name": "punctuation.definition.string.begin.webrelease"
            }
          },
          "end": "'",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.webrelease"
            }
          },
          "contentName": "string.quoted.single.webrelease",
          "patterns": [
            {
              "include": "#wr-expressions"
            },
            {
              "name": "constant.character.escape.webrelease",
              "match": "\\\\."
            }
          ]
        },
        {
          "begin": "(=)\\s*(\")",
          "beginCaptures": {
            "1": {
              "name": "punctuation.separator.key-value.webrelease"
            },
            "2": {
              "name": "punctuation.definition.string.begin.webrelease"
            }
          },
          "end": "\"",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.webrelease"
            }
          },
          "contentName": "string.quoted.double.webrelease",
          "patterns": [
            {
              "include": "#wr-expressions"
            },
            {
              "name": "constant.character.escape.webrelease",
              "match": "\\\\."
            }
          ]
        }
      ]
    }
  }
}
